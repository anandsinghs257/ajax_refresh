<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Articles</h1>      
    </div>
    <div class="card-body table-responsive">
      <table id="articles" class="table table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <%= render "article", article: article %>
          <% end %>
        </tbody>
      </table>
      <br>
      <div class="modal" id="newArticleModal" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"></div>
      <div class="modal" id="editArticleModal" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"></div>
      <div class="modal" id="showArticleModal" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"></div>
      <div class="article">
        <%= link_to 'New Article', new_article_path, data: { toggle: "modal", target: "newArticleModal", remote: true }, class: "btn btn-info"%>
      </div>
    </div>
  </div>
</div>
